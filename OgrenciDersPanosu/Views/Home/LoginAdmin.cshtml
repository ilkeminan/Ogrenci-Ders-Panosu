@model OgrenciDersPanosu.Models.LoginAdmin
@{
    //Admin kayıt sayfasıdır.
    ViewBag.Title = "Login";
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/Login.css" rel="stylesheet" type="text/css" />

<div class="form">
    <h2>Giriş Yap</h2>
    <hr />
    @using (Html.BeginForm())
    {
        //Admin için giriş formu post edilmesini sağlar
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

        <div class="form-group">
            @Html.LabelFor(i => i.AdminId, new { @class = "form-label1" })
            @Html.TextBoxFor(i => i.AdminId, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.AdminId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.Sifre)
            @Html.PasswordFor(i => i.Sifre, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.Sifre, "", new { @class = "text-danger" })
        </div>
        <button class="btn btn-custom4" type="submit">Login</button>
    }
</div>
