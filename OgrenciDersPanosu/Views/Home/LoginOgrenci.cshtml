@model OgrenciDersPanosu.Models.LoginOgrenci
@{
    ViewBag.Title = "Login";
    //Öğrenci giriş sayfasıdır
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/Login.css" rel="stylesheet" type="text/css" />
<div class="form">
    <h2>Giriş Yap</h2>
    <hr />
    @using (Html.BeginForm())
    {
        //Öğrenci için giriş formu post edilmesini sağlar
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

        <div class="form-group">
            @Html.LabelFor(i => i.OgrenciNo)
            @Html.TextBoxFor(i => i.OgrenciNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.OgrenciNo, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.Sifre)
            @Html.PasswordFor(i => i.Sifre, new { @class = "form-control" })
            @Html.ValidationMessageFor(i => i.Sifre, "", new { @class = "text-danger" })
        </div>
        <button class="btn btn-custom4" type="submit">Login</button>
    }
</div>
