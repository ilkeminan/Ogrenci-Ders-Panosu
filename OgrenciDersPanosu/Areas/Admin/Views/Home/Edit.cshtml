@model OgrenciDersPanosu.Areas.Admin.Models.RoleModel.RoleEditModel
@{
    ViewBag.Title = "Edit";
    //admin rollerinin düzenlenmesini, rolden kullanıcı çıkarma, role kullanıcı ekleme işlemlerinin düzenlenmesini sağlar
}

<h2>Edit</h2>
<br />
@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            <b>Add to @Model.Role.Name</b>
        </div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">Bu role eklenebilecek kullanıcı yok.</td></tr>
            }
            else
            {
                <tr>
                    <td>UserId</td>
                    <td>Role</td>
                </tr>
                foreach (var user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td><input type="checkbox" name="IdsToAdd" value="@user.Id" /></td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <b>Remove from @Model.Role.Name</b>
        </div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">Bu role eklenmiş kullanıcı yok.</td></tr>
            }
            else
            {
                <tr>
                    <td>UserId</td>
                    <td>Role</td>
                </tr>
                foreach (var user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td><input type="checkbox" name="IdsToDelete" value="@user.Id" /></td>
                    </tr>
                }
            }
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
}
