@model OgrenciDersPanosu.Models.Ders
@{
    ViewBag.Title = "Ders";
    //Ogretmenin kendisine ait bir ders olusturmasi 
}

<link href="~/Content/Register.css" rel="stylesheet" type="text/css" />
<div class="form">
    <h2>Ders Oluştur</h2>
    <hr />
    @Html.ValidationSummary()
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(i => i.DersId)
            @Html.TextBoxFor(i => i.DersId, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.DersAdi)
            @Html.TextBoxFor(i => i.DersAdi, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-custom3">Dersi Oluştur</button>
    }
</div>